<mujoco model="piper scene">
  <statistic center="0 0 0.4" extent="1"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="150" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.6 0.6 0.6" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.5 0.5 0.5" rgb2="0.3 0.3 0.3"
      markrgb="0.4 0.4 0.4" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
    <model name="piper" file="../../mujoco_menagerie/agilex_piper/piper.xml"/>
  </asset>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>
    <body name="piper" pos="0 0 0" quat="0 0 0 1">
      <!-- <geom type="cylinder" size=".06 .06" pos="0 0 .06" rgba="1 1 0 1"/> -->
      <attach model="piper" body="base_link" prefix="piper_"/>
    </body>
    <body name="target_cube" pos="-0.4 0 0.025">
      <freejoint/>
      <geom name="target_cube_geom" type="box" size="0.025 0.025 0.025"
        rgba="0.2 0.6 0.9 1" contype="1" conaffinity="1" density="3"
        friction="1 0.1 0.1"/>
    </body>
  </worldbody>
</mujoco>
